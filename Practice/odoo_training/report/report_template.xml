<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="car_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="line">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Car Details Report</h2>
                        <br/><br/>
                        <div class="row mt32 mb32" id="informations">
                            <div class="col-auto col-3 mw-100 mb-2">
                               <strong>Car Name:</strong>
                                 <p class="m-0" t-field="line.name"/>
                            </div>
                            <div  class="col-auto col-3 mw-100 mb-2">
                                <strong>Kilometers:</strong>
                                <p class="m-0" t-field="line.km"/>
                            </div>
                            <div  class="col-auto col-3 mw-100 mb-2">
                                <strong>Model:</strong>
                                <p class="m-0" t-field="line.model"/>
                            </div>
                            <div  class="col-auto col-3 mw-100 mb-2">
                                <strong>Showroom:</strong>
                                <p class="m-0" t-field="line.showroom_id"/>
                            </div>
                            <div  class="col-auto col-3 mw-100 mb-2">
                                <strong>Price:</strong>
                                <p class="m-0" t-field="line.price"/>
                            </div>
                            
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>